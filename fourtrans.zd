\subsection{Differentiation with respect to time}
If
\begin{align}
f(t) &\fpair F(\omega) \\
\frac{d^nf(t)}{dt^n} &\fpair (j\omega)^n F(\omega) \\
\intertext{provided that}
\frac{d^nf(t)}{dt^n}
\end{align}
still satisfies the Fourier Transform conditions.

\subsection{Differentiation with respect to frequency}
If
\begin{align}
f(t) &\fpair F(\omega) \\
(-jt)^n f(t) &\fpair \frac{d^n F(\omega)}{d\omega^n}
\end{align}

\subsection{Time convolution}
If
\begin{align}
f_1(t) &\fpair F_1(\omega) \\
f_2(t) &\fpair F_2(\omega) \\
\intertext{and define the convolution of $f_1(t)$ and $f_2(t)$ as}
f_1(t) \ast f_2(t) &\triangleq \int_{-\infty}^{\infty} f_1(t-\tau) f_2(\tau)
d\tau \\
&\triangleq  \int_{-\infty}^{\infty} f_1(\tau)f(t-\tau) d\tau \\
f_1(t) \ast f_2(t) &\fpair F_1(\omega)F_2(\omega) 
\end{align}

\subsection{Frequency convolution}
If
\begin{align}
f_1(t) &\fpair F_1(\omega) \\
\intertext{and}
f_2(t) &\fpair F_2(\omega) \\
f_1(t)f_2(t) &\fpair \frac{1}{2\pi}F_1(\omega)\ast F_2(\omega) \\
\intertext{where}
F_1(\omega)\ast F_2(\omega) &\triangleq \int_{-\infty}^{\infty} F_1(\mu)
F_2(\omega-\mu) d\mu \\
&\triangleq \int_{-\infty}^{\infty} F_1(\omega-\mu) F_2(\mu) d\mu \\
\intertext{Proof:}
\F^{-1}[F_1(\omega)\ast F_2(\omega)] &=\frac{1}{2\pi}\int_{-\infty}^{\infty}
F_1(\omega)\ast F_2(\omega) e^{j\omega t} d\omega \\
&= \frac{1}{2\pi}\int_{-\infty}^{\infty} \left\{ \int_{-\infty}^{\infty}
F_1(\mu)F_2(\omega-\mu) d\mu \right\} e^{j\omega t} d\omega \\
\intertext{As $\omega=\mu+x$}
&=\frac{1}{2\pi}\int_{-\infty}^{\infty} \left\{ \int_{-\infty}^{\infty}
F_1(\mu) F_2(x) d\mu \right\} e^{j(\mu+x)t} dx \\
 &=\frac{1}{2\pi}\int_{-\infty}^{\infty} F_1(\mu) e^{j\mu t} d\mu
 \int_{-\infty}^{\infty} F_2(x) e^{jx t} dx \\
 &=f_1(t) 2\pi f_2(t) \\
 \intertext{Thus}
 \frac{1}{2\pi}\F^{-1}[F_1(\omega)\ast F_2(\omega)] &= f_1(t)f_2(t) 
 \end{align}

\section{Parseval's Theorem and Energy Spectrum}	%3

The frequecny-convolution property of the Fourier Transform can be used to derive Parseval's
theorem presented as follows:
\begin{align}
\infint f(t)f^{\ast}(t) dt &= \frac{1}{2\pi}\infint F(\omega)F^{\ast}(\omega)
d\omega \zdtag \\
\intertext{or}
\infint |f(t)|^2 dt &= \frac{1}{2\pi} \infint |F(\omega)|^2 d\omega \label{eq3-pars}
\end{align}

For a real function $f(t)$, $|f(t)|$ can be replaced by $f(t)$ in the above
equation.

The theorem states that the energy contents of $f(t)$ is given by
$\frac{1}{2\pi}$ times the area under the {\em energy spectrum}\index{energy
spectrum} which is the plot of $|F(\omega)|^2$ against $\omega$.

Energy spectrum (or energy spectral density\index{spectral density} of the
signal $f(t)$) can bne defined as
\begin{equation}
\E(\omega) \triangleq |F(\omega)|^2 
\end{equation}

Equation~\ref{eq3-pars} states the face that the total energy in the spectrum
is equal to the total energy in the $f(t)$, and $f(t)$ is a {\em finite energy
signal} as well.

\section{Correlations Functions and the Wiener-Kintchine Theorem}	%4

In some applications we would like to know the resemblance of signals $f(t)$
and $g(t)$ or the resemblance of a section (segment) of a signal with its
neighbourhood.

\begin{Def}
The autocorrelation\index{autocorrelation function} function of a real finite
energy signal $f(t)$ is defined
as
\begin{equation}
\rho_{ff}(\tau)=\infint f(t)f(t+\tau) dt 
\end{equation}
\end{Def}

\begin{Thm}[Wiener-Kintchine Theorem 1]
If
\begin{align}
f(t) &\fpair F(\omega) \\
\rho_{ff}(\tau) &\fpair F^{\ast}(\omega)F(\omega) \\
\intertext{or}
\rho_{ff}(\tau) &\fpair |F(\omega)|^2
\end{align}
\end{Thm}

This means that the autocorrelation function and the energy spectrum
constitute a Fourier transform pair.

\begin{align}
\intertext{Proof:}
\F[\rho{ff}(\tau)] &= \infint \left\{ \infint f(t) f(t+\tau) dt \right\} e^{-j
\omega \tau} d\tau \\
\intertext{as $t+\tau=x$}
&= \infint \left\{ \infint f(t)f(x)dx\right\} e^{-j\omega(x-t)} d\tau \\
&= \underbrace{\infint f(t) e^{-j\omega t} dt}_{F^\ast(\omega)}
\underbrace{\infint f(x)e^{-j\omega x} dx}_{F(\omega)}
\end{align}

\begin{Def}
The cross-correlation\index{cross-correlation} between two finite energy
signals $f(t)$ and $g(t)$ is
defined as
\begin{equation}
\rho_{fg}(\tau)=\infint f(t)g(t+\tau)dt 
\end{equation}
\end{Def}

\begin{Thm}[Wiener-Kintchine Theorem 2]
If 
\begin{align}
	f(t) &\fpair F(\omega) \\
\intertext{and}
	g(t) &\fpair G(\omega) \\
	\rho_{fg}(\tau) &\fpair F^{\ast}(\omega) G(\omega) \\
\intertext{or}
	\rho_{fg}(\tau) &\fpair \E_{fg}(\omega) 
\end{align}

where $\E_{fg}(\omega) \triangleq F^{\ast}(\omega)G(\omega)$ is caled the
Cross-energy spectrum\index{cross-energy spectrum} of the two given signals.
That is the cross-correlation and the cross-energy spectrum constitute a
Fourier transform pair.

If $\rho_{fg}(\tau)$ is zero for all $\tau$, the two signals are said to be
uncorrelated.
\end{Thm}

\section{The Unit impulse and Generalized Functions}	%5

{\raggedright What is the problem?\\}
Given a unit step function
\begin{align}
U(t)&=\begin{cases}
	1 & t>0 \\
	0 & t<0 
	\end{cases} \\
\intertext{try to calculate its Fourier transform}
\F[U(t)] &= \infint U(t)e^{-j\omega t} dt \\
&= \int_0^{\infty} 1 e^{-j\omega t} dt \\
&= \frac{1}{-j\omega} \int_0^{\infty} e^{-j\omega t} d(-j\omega t) \\
&= \left.\frac{1}{-j\omega} e^{-j\omega t}\right|_0^\infty \\
&= \frac{1}{-j\omega} e^{-j\omega \infty}+\frac{1}{j\omega} 
\end{align}

{\bf It does not converge!} 

In otherwords, a simple and very useful function like $U(t)$ does not have a
Fourier transform.

The need arises to introduce the unit impulse function (or Dirac
delta\index{Dirac delta} function) and definition of generalized functions.

\subsection{A Heuristic introduction of the Unit Impulse functions}
Since the unit step function $U(t)$ cannot be differentiated at $t=0$ (its
discontinuity point), a function $\nu(t)$ is introduced.

\begin{equation}
\nu(t)=\begin{cases}
	\frac{1}{\epsilon} & 0<t<\epsilon \\
	0 & \mbox{otherwise} 
	\end{cases} 
	\end{equation}

