%#
\end{center}

{\raggedright Solution:\\}
\begin{enumerate}
\item \begin{equation}
f(-t)=-\frac{1}{t}=-f(t) 
\end{equation}
The function is odd.
\item 

\begin{align}
F(\omega) &=-2j\int_{0}^{\infty} \frac{\sin \omega t}{t} dt \\
          &= -2j\omega \int_0^{\infty} \frac{\sin \omega t}{\omega t} dt \\
          &= -2j \int_{0}^{\infty} \frac{\sin \omega t}{\omega t} d(\omega t) \\
\intertext{Now $\psi\triangleq\omega t$}
\int_0^{\infty} \frac{\sin \omega t}{\omega t} d \omega t &=\int_{0}^{\infty}\\
&=\frac{\sin \psi}{\psi} d\psi \\
\intertext{is called the sine integral and}
\int_{0}^{\infty} \frac{\sin \psi}{\psi} d\psi &=\begin{cases}
	\frac{\pi}{2} & \omega >0 \\
	-\frac{\pi}{2} & \omega <0 \\
	0 & \omega =0 
	\end{cases} \\
F(\omega) &=-2j\frac{\pi}{2} \sgn (\omega) \\
          &=-j\pi \sgn(\omega) \\
\intertext{where}
\sgn(\omega)&=\begin{cases}
	1 & \omega>0 \\
	-1 & \omega<0  \\
	\end{cases}
\end{align}

\item Thus
\begin{equation}
\frac{1}{t}\fpair -j\pi \sgn(\omega) 
\end{equation}
\end{enumerate}
\end{Exa}

Generally, for a real function $f(t)$
\begin{align}
F(\omega) &=\F[f(t)] \\
\F[f(-t)] &= \int_{-\infty}^{\infty} f(-t)e^{-j\omega t} dt \\
t' &\triangleq -t \\
& \left( \begin{array}{r@{\rightarrow}lr@{\rightarrow}l}
	t & -\infty & t' & +\infty \\
	t & +\infty & t' & -\infty \\
	\end{array} \right. \\
\F[f(-t)] &= F[f(t')] \\
&= \int_{\infty}^{\infty} f(t')e^{j\omega t'} d(-t') \\
&= -\int_{-\infty}^{\infty} f(t') e^{j\omega t'} dt' \\
&= \int_{-\infty}^{\infty} f(t')e^{-j\omega t'} dt' \\
&= F(\omega ') \\
&= F(-\omega) 
\end{align}
As 
\begin{align}
F(-\omega) &= R(-\omega)+jx(-\omega) \\
 &= R(\omega)-jx(\omega)
\end{align}
(If $f(t)$ is real, $R(\omega)$ even, $x(\omega)$ odd.)
it follows that
\begin{align}
f(t) &\fpair R(\omega)+jx(\omega) \\
f(-t) &\fpair R(\omega)-jx(\omega) 
\end{align}

For a given real function $f(t)$
\begin{equation}
f(t)=\underbrace{\mbox{even part}}_{\frac{1}{2}[f(t)+f(-t)]}+\underbrace{ \mbox{odd part}}_{\frac{1}{2}[f(t)-f(t)]} 
\end{equation}
Using linearity of F.T.
\begin{align}
\frac{1}{2}[f(t)+f(-t)] &\fpair \frac{1}{2}\left\{[R(\omega)+jx(\omega)]+[R(\omega)-jx(\omega)]\right\} \\
&= \frac{1}{2}\{2R(\omega)\} \\
&= R(\omega) \\
\frac{1}{2}[f(t)-f(-t)] &\fpair \frac{1}{2}\left\{[R(\omega)+jx(\omega)]-[R(\omega)-jx(\omega)]\right\} \\
&= j\frac{1}{2}\{2x(\omega)\} \\
&= jx(\omega) 
\end{align}
It is concluded that:

The even part of a real function is transformed into the real part of the F.T.
and the odd part of the function in transformed into the imaginary part of the
F.T. See Figure~\ref{f3-evod} for an example.

