\subsection{Power Spectra and Correlation Functions}
A periodic signal is a finite power signal rather that a finite energy one
becuase for a signal to be of finite energy, it has to be square integratable
over $[-\infty,\infty]$ (recalling
\begin{equation}
\infint f^2(t)dt = \frac{1}{2\pi}\infint |F(\omega)|^2 d\omega 
\end{equation}
to be finite.)
for a signal to be of finite power, it has to satsify
\begin{equation}
\frac{1}{T}\int_{-T/2}^{T/2} [f(t)]^2 dt =\infsum{k} |C_k|^2 
\end{equation}
being finite.

Define the autocorrelation function $\rho_{ff}(\tau)$ of the periodic signal
$f_\rho(t)$ as
\begin{equation}
\rho_{ff}(\tau)=\frac{1}{T}\int_{-T/2}^{T/2} f_rho(t) f_rho(t+\tau) dt
\end{equation}

\begin{align}
\intertext{Assume}
f_\rho(t) &= \infsum{k} C_ke^{j k \omega_0 t} \zdtag \\
\intertext{then}
f_\rho(t+\tau) &= \infsum{k} C_k e^{j k \omega_0 (t+\tau)} \zdtag \\
\rho_{ff}(\tau) &= \frac{1}{T} \int_{-T/2}^{T/2} \left( \infsum{k} C_k e^{j k
\omega_0 (t+\tau)} f_\rho(t)\right) dt \zdtag \\
&= \infsum{k} C_ke^{j k \omega_0 \tau} \frac{1}{T}\int_{-T/2}^{T/2}f_\rho(t)
e^{j k \omega_0 t} dt \zdtag \\
&= \infsum{k} C_k C^{\ast}_k e^{j k \omega_0 \tau} \\
\intertext{(Notice that}
C_k &=\frac{1}{T}\int_{-T/2}^{T/2} f(t)e^{-j k \omega_0 t} dt \zdtag \\
\intertext{and}
C^{\ast}_k &= \frac{1}{T} \int_{-T/2}^{T/2} f(t) e^{j k \omega_0 t} dt \zdtag \\
\intertext{)}
\rho_{ff} &=\infsum{k} |C_k|^2 e^{j k \omega_0 \tau} \label{eq3-corr}
\end{align}

By the definition, the power spectral amplitudes $|C_k|^2$ are the
coefficients of the Fourier series of the autocorrelation function
$\rho_{ff}(\tau)$.
(Notice the definition of the inverse Fourier Transform
\begin{equation}
f_\rho(t) =\infsum{k} C_k e^{j k \omega_0 t} \mbox{)}
\end{equation}
If $\tau=0$ in Equation~\ref{eq3-corr} then
\begin{align}
\rho_{ff} &= \frac{1}{T}\int_{-T/2}^{T/2} f_\rho(t)f_\rho(t) dt \zdtag \\
&= \infsum{k} |C_k|^2  \label{eq3-pars-per}
\end{align}

It is obvious that $\rho_{ff}(0)$ is equal to the average power of the signal.
Equation~\ref{eq3-pars-per} is Parsevals theorem for periodic functions.

If we define the power spectrum\index{Power spectrum} $P(\omega)$ of a
periodic signal $F_\rho(t)$ as the Fourier Transform of its autocorrelation
$\rho_{ff}(t)$,

\begin{align}
P(\omega) &= \F\left[\infsum{k} |C_k|^2 e^{j k \omega_0 t} \right] \zdtag \\
 &= 2\pi \infsum{k} |C_k|^2 \delta(\omega-k\omega_0)  \\
\intertext{Noticing that:}
e^{j\omega_0 t} &\fpair 2\pi \delta(\omega-\omega_0) \zdtag \\
\intertext{or}
e^{j k\omega_0 t} &\fpair 2\pi \delta(\omega-k\omega_0) \zdtag
\end{align}

Therefore, the power spectrum of a periodic function consists of impulses at
$\omega_0$ and its harmonics. The strength of each impulse is $2\pi|C_k|^2$.

The cross-correlation $\rho_{fg}(\tau)$ of two periodic signals $f(t)$ and
$g(t)$ is defined as

\begin{align}
\rho_{fg}(\tau) &=\frac{1}{T}\int_{-T/2}^{T/2} f(t) g(t+\tau) dt \\
\intertext{Assume}
f(t) &=\infsum{k} C_k e^{j k \omega_0 t} \zdtag \\
\intertext{and}
g(t) &= \infsum{k} d_k e^{j k \omega_0 t} \zdtag \\
\rho_{fg}(\tau) &= \infsum{k} C_k d^{\ast}_{k}e^{j k \omega_0 \tau}
\label{eq3-cc1} \\
\intertext{The cross-power spectrum of the two signals is defined as}
\rho_{fg}(\omega) &= \F[\rho_{fg}(\tau)] \zdtag \\
&= 2\pi \infsum{k} C_k d^{\ast}_k \delta(\omega-k\omega_0) \label{eq3-cc2}
\end{align}

Equation~\ref{eq3-cc1} and~\ref{eq3-cc2} constitute the Wiener-Kintchine theorem
for finite power signals.
\subsection{Poisson's summation formula}
Given a non-periodic function $f(t)$, a periodic function $f_\rho(t)$ may be
defined as
\begin{align}
f_\rho(t) &= f(t)\ast\delta_{\infty}(t) \zdtag \\
\intertext{where}
\delta_{\infty}(t) &= \infsum{k} \delta(t-kT) \zdtag \\
\intertext{Since}
f_\rho(t) &= \infsum{k} C_k e^{j k \omega_0 t} \zdtag \\
\intertext{or}
f_\rho(t) &=\frac{1}{T} \infsum{k} F(k\omega_0) e^{j k \omega_0 t} \zdtag \\
&= \frac{1}{T} \infsum{k} F(k\omega_0)e^{j k \omega_0 t} \\
\intertext{If $t=0$, we have}
\infsum{k} f(k T) &= \frac{1}{T}\infsum{k} F(k \omega_0) \label{eq3-poissum} \\
f_\rho(t) &= f(t)\ast\delta_{\infty} = \infsum{k}f(t+kT) \zdtag \\
\end{align}

Equation~\ref{eq3-poissum} is called {\em Poisson's summation formula\index{Poisson
summation}} which states that if $f(t)$ is an arbitrary function with Fourier
transform $F(\omega)$, then the sum of the values of the function $f(t)$ at
discrete values of $t=kT (k=0,1,\ldots)$ is related ot the sum of the values
of the $F(\omega)$ evaluated at discrete values of $\omega=k\omega_0 (\omega_0
=w\pi/T)$.

\subsection{Schwartz's inequality}
Schwartz's inequality states that
\begin{equation}
\left(\infint f^2(t)dt\right)\left(\infint g^2(t)dt\right) \geqslant
\left(\infint f(t)g(t)dt\right)^2 
\end{equation}
\subsection{The Uncertainty Principle}
Assume the Fourier transform pair
\begin{equation}
f(t) \fpair F(\omega) 
\end{equation}
and $f(t)$ is of duration $\Delta t$ and $F(\omega)$ has a band-width of
$\Delta \omega$.
\begin{align}
(\Delta t)^2 &= \frac{1}{\epsilon} \infint (t-\Hat(t))^2 f^2(t) dt \\
\intertext{where}
\epsilon &=\infint f^2(t)dt =\frac{1}{2\pi}\infint |F(\omega)|^2 d\omega
\zdtag \\
\Hat{t} &=\frac{1}{\epsilon}\infint t f^2(t) dt \zdtag \\
\intertext{And,}
(\Delta \omega)^2 &= \frac{1}{2\pi\epsilon} \infint (\omega-\Hat{\omega})^2
|F(\omega)|^2 d\omega \\
\intertext{where}
\Hat{\omega} &= \frac{1}{2\pi\epsilon} \infint \omega |F(\omega)|^2 d\omega
\zdtag \\
\intertext{The {\em Uncertainty Principle} states that:}
\intertext{If}
\sqrt{t}f(t) &\rightarrow 0 \qquad\mbox{as $|t|\rightarrow \infty$} \zdtag \\
 \Delta t \Delta \omega &\geqslant \half
\end{align}

It means that the duration $\Delta t$ of $f(t)$ and its spectral band-width
$\Delta \omega$ cannot be simultaneously small.

\subsection{Time-limited and Band-limited signals}

\begin{Def}
A function is time-limited\index{time-limited} if
\begin{equation}
f(t)=0 \qquad\mbox{for $|t|>\tau$} 
\end{equation}
$f(t)$ is called $\tau$-limited.
\end{Def}

\begin{Def}
A function $f(t)$ is band-limited\index{band-limited} if the spectrum
$F(\omega)$ of the $f(t)$ satisfies:
\begin{equation}
F(\omega)=0 \qquad\mbox{for $|\omega|>\omega_0$} 
\end{equation}
It is called $\omega_0$-limited.
\end{Def}

\begin{Thm}
A fucntion $f(t)$ cannot be both band-limited and time-limited.
\end{Thm}
