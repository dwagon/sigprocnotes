The integral of $\nu(t)$ is almost equal to $U(t)$ except for the
$[0,\epsilon]$ as
\begin{align}
 \int_{-\infty}^{t}\nu(t) dt &= \begin{cases}
	0 & t \leqslant 0 \\
	\frac{t}{\epsilon} & 0 < t < \epsilon \\
	1 & \epsilon \leqslant t < \infty 
	\end{cases} \\
\infint \nu(t) dt &= \int_{0^-}^{\epsilon} \nu(t)dt =1 
\end{align}

when $\epsilon\rightarrow 0$, $\nu(t)$ approaches the Dirac delta function
(Unit Impulse) $\delta(t)$ defined as

\begin{equation}
\infint \delta(t)dt = \int_{0^-}^{0^+} \delta(t) dt =1 
\end{equation}

A more rigorous derivation of the impulse $\delta(t)$ may be found in Baher's
book (p.p. 88--93) using the concept of distribution or the limit of a
sequence.

\subsection{Properties of the Unit Impulse}
\begin{align}
\intertext{Property 1}
	\delta(\alpha t) &=\frac{1}{|\alpha|}\delta(t) \\
	\intertext{where $\alpha$ is a real constant}
\intertext{Property 2}
	\delta(t) &= \delta(-t) \\
\intertext{Property 3}
	\delta(t) &\fpair 1 \\
	1 &\fpair 2\pi \delta(\omega) \\
\intertext{Property 4}
	\infint \phi(\tau)\left(\frac{d^n\delta(\tau)}{d\tau^n}\right)d\tau &=
	(-1)^n\left. \frac{d^n\phi(t)}{dt^n}\right|_{t=0} \\
\intertext{Proof:}
	\infint \phi(\tau)\delta(\tau-t) d\tau &= \phi(t) \\
\intertext{Differentiate two sides of the equation $n$ times with respect to
$t$}
\intertext{$n=1$:}
\infint \phi(\tau)\frac{d\delta(\tau-t)}{d(\tau-t)}.\frac{d(\tau-t)}{dt} d\tau
&=\frac{d\phi(t)}{dt} \\
\infint  \phi(\tau)\frac{d\delta(\tau-t)}{d(\tau-t)}.(-1)d\tau &=
\frac{d\phi(t)}{dt} \\
\intertext{As $t\rightarrow 0$}
\infint \phi(\tau)\frac{d\delta(\tau)}{d\tau} d\tau &=
(-1)\left.\frac{d\phi(t)}{dt}\right|_{t=0} \\
\intertext{$n$:}
\infint \phi(\tau) \frac{d^{n}\delta(\tau-t)}{d(\tau-t)^{n}} \left(\frac{d(\tau-t)}{dt}^{n}
\right) d\tau &= \frac{d^{n}\phi(t)}{dt^{n}} \\
\intertext{As $t\rightarrow 0$}
\infint \phi(\tau) \frac{d^{n}\delta(\tau-t)}{d\tau^{n}} d\tau
&= (-1)^{n} \left.\frac{d^{n}\phi(t)}{dt}\right|_{t=0} \\
\intertext{Property 5}
g(t)\delta(t-\alpha) &= g(\alpha)\delta(t-\alpha) \\
\intertext{Property 6}
\delta(t) &= \frac{dU(t)}{dt} 
\end{align}
With the introduction of the $\delta(t)$ function, Fourier transforms of many
useul functions become possible.
\begin{enumerate}
\item 
	\begin{align}
		K\delta(t) & \fpair K \\
		K &\fpair 2\pi K \delta(\omega) 
	\end{align} 
\item 
\begin{align}
\intertext{If}
U(t) &= \frac{1}{2}+\frac{1}{2}\sgn(t) \\
U(t) &\fpair \pi\delta(\omega)+\frac{1}{j\omega} \\
\intertext{Proof:}
\intertext{Recalling}
\frac{1}{t} &\fpair \frac{1}{-j\pi} 2\pi \left( \frac{1}{-\omega} \right) =
\frac{2}{j\omega} \\
\intertext{use symmetry property}
\F[U(t)] &= \F[\frac{1}{2}+F[\frac{1}{2}\sgn(t)] \\
&= 2\pi \frac{1}{2} \delta(\omega)+\frac{1}{2}\frac{2}{j\omega} \\
&= \pi\delta(\omega)+\frac{1}{j\omega}
\end{align}
\item The relation between the Fourier Transform of $f(t)$ and that of its integral is
\begin{equation}
\infint f(\tau)d\tau \fpair \pi
F(0)\delta(\omega)+\frac{F(\omega)}{j\omega} 
\end{equation}
\item Use time shifting property
\begin{align}
\delta(t-T) &\fpair e^{-j\omega T}\\
\delta(t+T) &\fpair e^{j\omega T}\\
\intertext{Therefore}
\frac{1}{2}[\delta(t-T)+\delta(t+T)] &\fpair \cos \omega T \\
\intertext{and}
\frac{1}{2j}[\delta(t+T)-\delta(t-T)] &\fpair \sin \omega T
\end{align}
\item Using the symmetry property
\begin{align}
e^{j\omega_0t} &\fpair 2\pi \delta(\omega-\omega_0) \\
e^{-j\omega_0t} &\fpair 2\pi \delta(\omega+\omega_0) \\
\intertext{therefore}
\cos \omega_0 t &\fpair \pi[\delta(\omega-\omega_0)+\delta(\omega+\omega_0)] \\
\sin \omega_0 t &\fpair j\pi[\delta(\omega-\omega_0)+\delta(\omega+\omega_0)]
\end{align}
\end{enumerate}

