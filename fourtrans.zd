\subsection{Conjugate}
If $f(t)$ is a complex function and $\F[f(t)]=F(\omega)$,
\begin{align}
\F[f^{\ast}(f)] &=\int_{-\infty}^{\infty} f^{\ast}(t)e^{-j\omega t} dt \\
 &= \left\{ \int_{-\infty}^{\infty} f(t)[e^{-j\omega t}]^{\ast} dt
 \right\}^{\ast} \\
 &= \left\{ \int_{-\infty}^{\infty} f(t)e^{j\omega t}] dt\right\}^{\ast} \\
 &= \left\{ \int_{-\infty}^{\infty} f(t)e^{-j\omega t'}] dt\right\}^{\ast} \\
 &= F^{\ast}(\omega ') \\
 &= F^{\ast}(-\omega) \\
 \intertext{That is $f^{\ast}\fpair F^{\ast}(\omega)$}
 \intertext{However, if $f(t)$ is real}
 f^{\ast}(t) &= f(t) \\
 \intertext{it follows that}
 f(t) &\fpair F^{\ast}(-\omega) \\
 \intertext{and}
 F(\omega) &= F^{\ast}(-\omega) 
 \end{align}

\subsection{Linearity}
If
\begin{align}
a_iF_i(t) &\fpair a_iF_i(\omega) \\
\sum_i a_i f_i(t) &\fpair \sum_i a_i F_i(\omega) 
\end{align}
where $a_i$ are arbitrary constants.

\subsection{Scaling}

If $\alpha$ is a real constant,
\begin{equation}
f(\alpha t) \fpair \frac{1}{|\alpha|}F\frac{\omega}{\alpha} 
\end{equation}
The scaling property states that the compression of the time scale corresponds
to the expansion of te frequency scale. The magnitude is contracted while the
horizontal expands. As shown in Figure~\ref{f3-scale}.

